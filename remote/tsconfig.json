{
  "extends": ["@breadlee/tsconfig/react-library.json"],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "jsx": "preserve",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@components": ["components/index.ts"]
    },
  },
  "exclude": ["node_modules"]
}